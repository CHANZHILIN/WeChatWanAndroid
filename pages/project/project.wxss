/* pages/project/project.wxss */
page {
  background-color: #F5F5F5
}

.scroll-view-official {
  width: 100%;
  white-space: nowrap;
  position: fixed;
  top: 0px;
  z-index: 99;
}

.top {
  display: inline-block;
}

.top-name {
  width: fit-content;
  padding: 5px 5px 5px 5px;
  text-align: center;
  background-color: white;
  font-size: medium;
  border-top: rgba(204, 204, 204, 0.726) solid 1px;
  border-bottom: rgba(204, 204, 204, 0.726) solid 1px;
  color: #ccc;
}

.top-name-checked {
  width: fit-content;
  padding: 5px 5px 5px 5px;
  text-align: center;
  background-color: white;
  border-top: rgba(204, 204, 204, 0.726) solid 1px;
  border-bottom: tomato solid 2px;
  font-size: medium;
  color: tomato;
}

.swiper {
  width: 100%;
  height: 100vh;
  margin-top: 35px;
  align-content: center;
}

.scroll-view {
  width: 100%;
  height: 100vh;
}

.medium {
  width: 100%;
  padding: 10px;
  position: relative;
  border-bottom: 1px solid #F5F5F5;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: row;
}

.medium-image {
  width: 80px;
  height: 140px;
  flex-grow: 0;
  margin: 10px;
  flex-shrink: 0;
  flex-basis: 80px;
}

.medium-right {
  height: 100%;
  flex-grow: 1;
  flex-shrink: 1;
  padding: 0px 10px 10px 10px;
  flex-basis: 80px;
  white-space: normal;

}

.medium-setTopNew {
  font-size: 10px;
  padding: 2px;
  margin-right: 5px;
  color: green;
  border: 1rpx dashed green;
  background-color: white;
}

.medium-author {
  font-size: x-small;
  color: #cccccc;
}

.medium-time {
  position: absolute;
  margin-top: 4px;
  margin-right: 15px;
  right: 15px;
  font-size: xx-small;
  color: #ccc;
}

.text-content {
  font-size: medium;
  margin: 10px 10px 10px 0px;
  width: 100%;
}

.text-desc {
  font-size: small;
  color: #ccc;
  margin: 10px 10px 10px 0px;
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.text-project-url {
  font-size: small;
  color: tomato;
  margin: 10px 10px 10px 0px;
  width: auto;
}

.scroll-view-official ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}