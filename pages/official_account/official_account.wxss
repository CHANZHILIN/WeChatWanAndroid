page {
  background-color: #F5F5F5
}

.scroll-view-official {
  width: 100%;
  white-space: nowrap;
  position: fixed;
  top: 0px;
  z-index: 99;
}

.top {
  display: inline-block;
}

.top-name-underline {
  width: fit-content;
  padding: 5px 5px 5px 5px;
  text-align: center;
  background-color: tomato;
  color: white;
  font-size: medium;
}

.top-name-nounderline {
  width: fit-content;
  padding: 5px 5px 5px 5px;
  text-align: center;
  background-color: #ccc;
  font-size: medium;
  color: white;
}

.container{
  width: 100%;
  margin-top: 40px;
}

.medium {
  width: 100%;
  padding: 10px;
  border-bottom: 1px solid #F5F5F5;
  background-color: #FFFFFF;
  position: relative;
}

.medium-setTop {
  font-size: 10px;
  padding: 2px;
  margin-right: 5px;
  color: red;
  border: 1rpx solid red;
  background-color: white;
}

.medium-setTopNew {
  font-size: 10px;
  padding: 2px;
  margin-right: 5px;
  color: green;
  border: 1rpx dashed green;
  background-color: white;
}

.medium-author {
  font-size: x-small;
  color: #cccccc;
}

.medium-time {
  position: absolute;
  margin-right: 15px;
  right: 15px;
  font-size: x-small;
  color: #cccccc;
}

.text-content {
  font-size: large;
  padding: 5px;
  margin-right: 10px;
}

.text-original {
  font-size: x-small;
  color: #cccccc;
}

.image-focus {
  right: 15px;
  position: absolute;
  margin-right: 15px;
  width: 25px;
  height: 25px;
}