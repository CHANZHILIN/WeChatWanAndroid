/* pages/system/system.wxss */
page {
  background-color: #F5F5F5
}

::-webkit-scrollbar {
  display:none;
  width:0;
  height:0;
  color:transparent;
}

.scroll-view-tabTitle {
  width: 100%;
  white-space: nowrap;
  position: fixed;
  top: 0px;
  background-color: white;
  text-align: center;
  padding-bottom: 5px;
  border-bottom: 1px solid #ccc;
  z-index: 99;
}

.top {
  display: inline-block;
}

.top-nav-left {
  width: fit-content;
  padding: 5px 10px 5px 10px;
  text-align: center;
  background-color: #ccc;
  color: white;
  border-top-left-radius: 15px;
  border-bottom-left-radius: 15px;
  font-size: medium;
}
.top-nav-left-checked {
  width: fit-content;
  padding: 5px 10px 5px 10px;
  text-align: center;
  background-color: tomato;
  color: white;
  border-top-left-radius: 15px;
  border-bottom-left-radius: 15px;
  font-size: medium;
}

.top-nav-right {
  width: fit-content;
  padding: 5px 10px 5px 10px;
  text-align: center;
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  background-color: #ccc;
  font-size: medium;
  color: white;
}

.top-nav-right-checked {
  width: fit-content;
  padding: 5px 10px 5px 10px;
  text-align: center;
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  background-color: tomato;
  font-size: medium;
  color: white;
}
.swiper{
  width: 100%;
  margin-top: 35px;
}
.container{
  width: 100%;
  height: 100%;
}
.system-medium{
  width: 100%;
  padding: 10px 10px 10px 10px;
  border-bottom: 1px solid #F5F5F5;
  background-color: #FFFFFF;
}

.text-title {
  font-size: medium;
  padding: 5px;
  color: black;
}
.text-content {
  font-size: small;
  padding: 5px;
  color: #ccc;
}
.nav-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.nav-container-left{
  height: 100%;
  flex-grow: 0;
  flex-shrink: 0;
  flex-basis: 60px;
}
.nav-container-right{
  height: 100%;
  flex-grow:1;
  flex-shrink: 1;
  padding: 0px 10px 10px 10px;
  flex-basis: 60px;
}

.nav-left {
  width:60px;
  padding: 5px 10px 5px 10px;
  text-align: center;
  background-color: #ccc;
  color: white;
  font-size: small;
}
.nav-left-checked { 
  width:60px;
  padding: 5px 10px 5px 10px;
  text-align: center;
  background-color: tomato;
  color: white;
  font-size: small;
}

.nav-right-title{
  display: block;
  font-size: medium;
  color: black;
}

.nav-right-content-container{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}


.nav-right-content{
  width:fit-content;
  margin: 5px;
  padding: 5px;
  text-align: center;
  border-radius: 5px;
  background-color: tomato;
  color: white;
  font-size: small;
}